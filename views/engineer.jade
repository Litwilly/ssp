doctype 5
html
	head
		title Ryan Rules
		link(rel='stylesheet', href='/stylesheets/styles.css')
		link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
		link(rel='stylesheet', href='/stylesheets/main.css')
		link(rel='stylesheet', href='/stylesheets/emc-icon-styles.css')
		link(rel='icon', type='images/png', href='images/favicon.png')
		//- link(rel='stylesheet', href='/stylesheets/flaticon.css')
	body
		script(src='/javascripts/jquery-2.0.3.min.js')
		script(src='/javascripts/bootstrap.min.js')

		nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
			.container
				.navbar-header
					a.emcTab(href='/', title='Wronski Medical Solutions')
					h3.applicationIdentifier Wonski Medical Solutions
					ul.nav.navbar-nav.navbar-right
						button.navbar-toggle(data-toggle='collapse', data-target='.navHeaderCollapse')
							span.icon-bar
							span.icon-bar
							span.icon-bar
						.collapse.navbar-collapse.navHeaderCollapse
							ul.nav.navbar-nav.navbar-right
								li.active
									a(href='')
										span.glyphicon.glyphicon-home
										|  Home
								li.active
									a(href='#myModal', data-toggle='modal')
										span.glyphicon.glyphicon-wrench
										|  Create Service Request
								li.active
									a.dropdown-toggle(href='#', data-toggle='dropdown')
										span.glyphicon.glyphicon-eye-open
										|  My Equipment
										b.caret
									ul.dropdown-menu
										li
											a(href='') View My Equipment
										li
											a(href='') View My Reports
										li
											a(href='') Email Search
										li
											a(href='') Add To Group
				form.navbar-form.navbar-right(action='/logout')
					button(type='submit' class='btn btn-default pull-right') Logout

		.container
			br
			br
			.jumbotron
				h1 Hello #{firstname}
				h2 You are an Engineer!
				p Today is #{moment(Date.now()).format('dddd, MMMM Do')}
		
		.container
					h3.text-center Work Offers
					.table-responsive
						table.table.table-striped.table-bordered
							thead
								tr
									th.text-center Service Order
									th.text-center Priority
									th.text-center Customer
									th.text-center Product
									th.text-center Problem 
									th.text-center Status
							tbody
								for work in WorkOffers
									tr
										td
											a(data-toggle='modal', href='#myModal') #{work._id}
										td= work.PriorityDescription
										td= work._CreatedBy
										td= work.ProductName									
										td= work.ProblemTypeDescription
										if work.CurrentStatus == "Assigned, Waiting to be Accepted"
											td.text-danger #{work.CurrentStatus}
										else 
											td= work.CurrentStatus
		.container
					h3.text-center Assigned Work
					.table-responsive
						table.table.table-striped.table-bordered
							thead
								tr
									th.text-center Service Order
									th.text-center Priority
									th.text-center Customer
									th.text-center Product
									th.text-center Problem 
									th.text-center Status
							tbody
								for work in WorkAssigned
									tr
										td
											a(data-toggle='modal', href='#myModal') #{work._id}
										td= work.PriorityDescription
										td= work._CreatedBy
										td= work.ProductName									
										td= work.ProblemTypeDescription
										if work.CurrentStatus == "Assigned, Waiting to be Accepted"
											td.text-danger #{work.CurrentStatus}
										else 
											td= work.CurrentStatus									
				
				#myModal.modal.fade
					.modal-content
						.modal-header
							button.close(type='button', data-dismiss='modal', aria-hidden='true')
							h4.myModalLabel.modal-title
							| (ProductName) Service Order
						.modal-body
							p Here is the Service Order echodata the customer filled out. 
							.panel-group(id='accordian')
								.panel.panel-default
									.panel-heading
										h4.panel-title
											a(data-toggle='collapse' data-parent='#accordion' href='#collapse1') Customer Data 
									.panel-collapse.collapse(id='collapse1')
										.panel-body
											p.lead This is all of my Collapse 1 Content
											p this content is very cool.
							p
								button.btn.btn-info(type='button' href='#' id='poppop' rel='popover') Accept Service Order 
							
							
						.modal-footer
							button.btn.btn-primary(type='button', data-dismiss='modal') Close
						script
							$('#poppop').popover();
							$('#poppop2').popover();
				
					
		.navbar.navbar-default.navbar-fixed-bottom
			.container
				p.navbar-text.pull-left
					| &#174; 2016 WMD, Inc.
				p.navbar-text.pull-right  
					a(href='') Support 24x7
				p.navbar-text.pull-right  
					a(href='') Privacy Policy
