doctype 5
html
	head
		meta 
		link(href='assets/css/bootstrap.css', rel='stylesheet')
		link(href='stylesheets/modal_custom.css', rel='stylesheet')
		script(src='//html5shim.googlecode.com/svn/trunk/html5.js')
		link(href='assets/css/google-plus.css', rel='stylesheet')
	body
		.modal-header
			button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
			.myModalLabel.modal-title
				.p.thicker #{reqid}     
		.modal-body
				form(role="form" id="workAssModal" name="workAssModal" method="post" action="/engineer/complete")
					.row
						//Panel 1e
						.col-md-12.col-md-12
							.panel.panel-primary
								.panel-heading
									h4 Service Details
								.panel-body            
									.text-center.clearfix "#{reqproblemnotes}"
									hr              
									.col-xs-6
										.p.thicker Product
										p.p #{reqprd} 
										p
										p.p Serial:  #{reqserial}
										p.p ID:  #{reqequipid}	
									.col-xs-6
										.p.thicker Problem
										p.p #{reqproblemdescription}
										p
										p.p Estimated Minutes:  #{reqserial}




						//Panel 2
						.col-md-12.col-md-12		
							.panel.panel-default
									.panel-heading
										h4 Notes
									.panel-body
										.col-md-12.col-sm-12
											textarea.form-control(id="ActionNotes" rows="5" cols='75' name="ActionNotes" placeholder="Add serivce notes here...")
											hr	
											.col-xs-6 Element
											.col-xs-6 Element2
						.col-md-12.col-md-12		
							.panel.panel-default
									.panel-heading
										h4 Parts 
									.panel-body
										.col-md-12.col-sm-12
											.col-xs-6 Element4
										
						//Buttons				
						input(type="hidden" name="Today" value="2016-01-06T08:04:00.000Z")
						.col-xs-6
								button.btn.btn-success.pull-right(type="submit" name="submit" value="submit") Check In 
						.col-xs-6
							button.btn.btn-danger.pull-left(type='button', data-dismiss='modal') Check Out			
